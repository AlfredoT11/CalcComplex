            #pos: 100, 100

            GridLayout:
                rows: 3
                cols: 4
                padding: 10
                spacing: 10
                size_hint: [1, .5]                
                
                Label:
                    text: "z1 = "
                TextInput:
                    id: r1
                    multiline: False
                Label:
                    text:"+i"
                TextInput:
