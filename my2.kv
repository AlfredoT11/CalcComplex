                Label:
                    text: "arccos(z)"
                CheckBox:
                    id: acos

                Label:
                    text: "arctan(z)"
                CheckBox:
                    id: atan

                Label:
                    text: "arccsc(z)"
                CheckBox:
                    id: acsc

                Label:
                    text: "arcsec(z)"
                CheckBox:
                    id: asec

                Label:
                    text: "arccot(z)"
                CheckBox:
                    id: acot               

                Label:
                    text: "senh(z)"
                CheckBox:
                    id: senh

                Label:
                    text: "cosh(z)"
                CheckBox:
                    id: cosh

                Label:
                    text: "tanh(z)"
                CheckBox:  
                    id: tanh  

                Label:
                    text: "csch(z)"
                CheckBox:
                    id: csch

                Label:
                    text: "sech(z)"
                CheckBox:
                    id: sech

                Label:
                    text: "coth(z)"
                CheckBox:   
                    id: coth 

                Label:
                    text: "arcsenh(z)"
                CheckBox:
                    id: asenh

                Label:
                    text: "arccosh(z)"
                CheckBox:
                    id: acosh

                Label:
                    text: "arctanh(z)"
                CheckBox:     
                    id: atanh           

                Label:
                    text: "arccsch(z)"
                CheckBox:
                    id: acsch

                Label:
                    text: "arcsech(z)"
